.row
  .small-12.small-centered.columns
    .row
      - @users.sort_by(&:points).each_with_index do |user, idx|
        %table.table.table-bordered
          %thead
            %tr
              %th #
              %th NickName
              %th Points
          %tbody  
            %tr
              %th= idx + 1
              %td= user.nickname
              %td= user.points
